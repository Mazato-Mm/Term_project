   "source": [
    "import pygame\n",
    "import sys\n",
    "from pathlib import Path\n",
    "\n",
    "pygame.init()\n",
    "pygame.mixer.init()\n",
    "\n",
    "LANG = \"en\"\n",
    "LANG_FILE = {\n",
    "    \"en\": {\n",
    "        \"win\": \"YOU WIN!\",\n",
    "        \"lose\": \"YOU LOSE!\",\n",
    "        \"volume\": \"Volume\",\n",
    "        \"toggle_music\": \"Press M to play/pause music\",\n",
    "        \"reset\": \"(R) Restart\",\n",
    "        \"controls\": \"W = Win, L = Lose, R = Reset\"\n",
    "    }\n",
    "}\n",
    "TEXT = LANG_FILE[LANG]\n",
    "\n",
    "def init_audio_system():\n",
    "    pygame.mixer.init()\n",
    "\n",
    "def play_bg_music(path=\"bg_music.mp3\", loops=-1, volume=0.5):\n",
    "    p = Path(path)\n",
    "    if not p.exists():\n",
    "        print(f\" BG music not found: {path}\")\n",
    "        return\n",
    "    pygame.mixer.music.load(str(p))\n",
    "    pygame.mixer.music.set_volume(volume)\n",
    "    pygame.mixer.music.play(loops=loops)\n",
    "    print(f\"üéµ Playing background music: {path}\")\n",
    "\n",
    "def stop_bg_music():\n",
    "    pygame.mixer.music.stop()\n",
    "\n",
    "def pause_bg_music():\n",
    "    pygame.mixer.music.pause()\n",
    "\n",
    "def unpause_bg_music():\n",
    "    pygame.mixer.music.unpause()\n",
    "\n",
    "def set_bg_volume(volume):\n",
    "    volume = max(0.0, min(1.0, volume))\n",
    "    pygame.mixer.music.set_volume(volume)\n",
    "\n",
    "def play_sound(path, volume=0.8):\n",
    "    p = Path(path)\n",
    "    if not p.exists():\n",
    "        print(f\"‚ö†Ô∏è Sound file not found: {path}\")\n",
    "        return\n",
    "    sound = pygame.mixer.Sound(str(p))\n",
    "    sound.set_volume(volume)\n",
    "    sound.play()\n",
    "\n",
    "def play_win_sound():\n",
    "    play_sound(\"win.mp3\", volume=0.8)\n",
    "\n",
    "def play_lose_sound():\n",
    "    play_sound(\"lose.mp3\", volume=0.8)\n",
    "\n",
    "def main():\n",
    "    screen = pygame.display.set_mode((800, 600))\n",
    "    pygame.display.set_caption(\"Sound & Localization System Test\")\n",
    "\n",
    "    font = pygame.font.SysFont(None, 48)\n",
    "    clock = pygame.time.Clock()\n",
    "\n",
    "    play_bg_music(\"bg_music.mp3\", loops=-1, volume=0.2)\n",
    "\n",
    "    running = True\n",
    "    game_over = False\n",
    "    winner = None\n",
    "    bg_volume = 0.2\n",
    "\n",
    "    while running:\n",
    "        for event in pygame.event.get():\n",
    "            if event.type == pygame.QUIT:\n",
    "                stop_bg_music()\n",
    "                running = False\n",
    "\n",
    "            if event.type == pygame.KEYDOWN:\n",
    "                if event.key == pygame.K_w:\n",
    "                    winner = \"win\"\n",
    "                    play_win_sound()\n",
    "                    game_over = True\n",
    "                elif event.key == pygame.K_l:\n",
    "                    winner = \"lose\"\n",
    "                    play_lose_sound()\n",
    "                    game_over = True\n",
    "                elif event.key == pygame.K_r:\n",
    "                    game_over = False\n",
    "                    winner = None\n",
    "                    unpause_bg_music()\n",
    "                elif event.key == pygame.K_m:\n",
    "                    if pygame.mixer.music.get_busy():\n",
    "                        pause_bg_music()\n",
    "                    else:\n",
    "                        unpause_bg_music()\n",
    "                elif event.key == pygame.K_UP:\n",
    "                    bg_volume = min(1.0, bg_volume + 0.1)\n",
    "                    set_bg_volume(bg_volume)\n",
    "                elif event.key == pygame.K_DOWN:\n",
    "                    bg_volume = max(0.0, bg_volume - 0.1)\n",
    "                    set_bg_volume(bg_volume)\n",
    "\n",
    "        screen.fill((25, 25, 35))\n",
    "\n",
    "        if not game_over:\n",
    "            text = font.render(TEXT[\"controls\"], True, (255, 255, 255))\n",
    "            screen.blit(text, (140, 260))\n",
    "        else:\n",
    "            msg = TEXT[\"win\"] if winner == \"win\" else TEXT[\"lose\"]\n",
    "            color = (0, 255, 0) if winner == \"win\" else (255, 0, 0)\n",
    "            pause_bg_music()\n",
    "            text = font.render(msg, True, color)\n",
    "            screen.blit(text, (300, 260))\n",
    "            restart = font.render(TEXT[\"reset\"], True, (200, 200, 200))\n",
    "            screen.blit(restart, (270, 340))\n",
    "\n",
    "        vol_text = font.render(f\"{TEXT['volume']}: {bg_volume:.1f}\", True, (180, 180, 255))\n",
    "        screen.blit(vol_text, (20, 20))\n",
    "        text_2 = font.render(TEXT[\"toggle_music\"], True, (150, 150, 150))\n",
    "        screen.blit(text_2, (20, 550))\n",
    "\n",
    "        pygame.display.flip()\n",
    "        clock.tick(60)\n",
    "\n",
    "    pygame.quit()\n",
    "    sys.exit()\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    main()\n"
   ]
  },
